{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*"
      ]
    },
    "types": [
      "bun-types",
      "vite/client"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "app",
    "routes",
    "resources/js",
    "types",
    "tests"
  ]
}
