{
  "name": "@guren/example-blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "routes:types": "bun ../../packages/cli/src/bin.ts routes:types --force",
    "dev": "bun run dev:server",
    "dev:server": "bun run --watch --hot bin/serve.ts",
    "smoke": "bun run ./smoke.ts",
    "test": "vitest run",
    "build": "bunx vite build && bunx vite build --ssr",
    "typecheck": "tsc --noEmit",
    "preview": "bunx vite preview",
    "db:make": "bunx guren make:migration",
    "db:migrate": "bunx guren db:migrate",
    "db:seed": "bunx guren db:seed"
  },
  "dependencies": {
    "@guren/cli": "workspace:*",
    "@guren/inertia-client": "workspace:*",
