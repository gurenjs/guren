    "@guren/testing": "workspace:*",
    "@guren/orm": "workspace:*",
    "@guren/server": "workspace:*",
    "@inertiajs/react": "^2.2.15",
    "lucide-react": "^0.552.0",
    "drizzle-orm": "0.44.7",
    "postgres": "^3.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "drizzle-kit": "0.27.0",
    "jsdom": "^25.0.0",
    "tailwindcss": "^4.1.16",
